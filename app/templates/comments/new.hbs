<h1>New comment</h1>
<form>
  <div class="form-group">
        <label for="Blog">Blog</label>
        {{#power-select search=(action "searchBlog") selected=selected onchange=(action (mut selected)) as |blog|}}
       {{blog.title}}
     {{/power-select}}
    </div>
    <div class="form-group">
    {{bs-datetimepicker date=model.created_at pickTime=true showToday=false  forceDateOutput=true format='YYYY-MM-DD HH:mm:00' updateDate=(action (mut model.created_at))}}
    </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{textarea value=model.body class="form-control" id="body" rows="15"}}
  </div>
  <button class="btn btn-primary" {{action 'save' model selected}}>Save</button>
</form>
